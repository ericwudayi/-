<html lang="zh-tw">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Chatroom</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.4/vue.js"></script>
    <script>
        var socket = io();
    </script>
    <style>
    html, body {
        padding: 0;
        margin: 0;
    }
 
    #container {
        position: absolute;
        left: 450px;
        top: 70px;
        width: 325px;
        margin: 0 auto;
        display: block;
        position: relative;
    }

    #container2 {
        position: absolute;
        left: 450px;
        top: 70px;
        width: 325px;
        margin: 0 auto;
        display: block;
        position: relative;
    }
 
    #status-box {
        text-align: right;
        font-size: .6em;
    }
 
    
    #content {
        width: 100%;
        height: 400px;
        border: 1px solid darkolivegreen;
        border-radius: 0px;
        overflow: auto;
    }

    #content2 {
        width: 100%;
        height: 400px;
        border: 1px solid darkolivegreen;
        border-radius: 0px;
        overflow: auto;
    }
    #login_button {
        width: 105%;

        text-align: left;
    }
    #send-box {
        width: 105%;

        text-align: left;
    }
 
    #send-box input {
        display: inline-block;
    }
    
    #bidding-box {
        width: 105%;

        text-align: left;
    }
 
    #bidding-box input {
        display: inline-block;
    }
 
    input[name="msg"] {
        width: 80%;
        height :40px;
    }
 
    input[type="button"] {
        width: 10%;
        display: inline-block;
    }
 
    .msg {
        width: 73%;
        display: inline-block;
        padding: 5px 0 5px 10px;
    }
 
    .msg > span {
        width: 25%;
        display: inline-block;
    }
 
    .msg > span::before {
        color: darkred;
        
    } 
    
    .msg > span::after {
        color: darkred;
        content: ":";
    }

</style>
</head>

<body>
    <script src="https://cdn.bootcss.com/flv.js/1.4.0/flv.min.js"></script>
    <video id="videoElement"></video>
    <script>
        if (flvjs.isSupported()) {
            var videoElement = document.getElementById('videoElement');
            var flvPlayer = flvjs.createPlayer({
                type: 'flv',
                url: 'http://localhost:8000/live/STREAM_NAME.flv'
            });
            flvPlayer.attachMediaElement(videoElement);
            flvPlayer.load();
            flvPlayer.play();
        }
    </script>
    
    <div id="mixed">  
        <div  id="container">
            <div id="status-box">Server: <span id="status">-</span> / <span id="online">0</span> online.</div>
            <div id="content">
                <div class="msg">
                    <span class="name">Duye</span>
                    Hello!
                </div>
                <div class="msg">
                    <span class="name">Alice</span>
                    Hi!
                </div>
            </div>
            <div id="chat"> 

                <% if (!login) { %>
                <div> 登入以繼續</div>
                <% } %>
                
                <% if(login) { %>
                <div  id="send-box">
                    <form id="send-form">
                        <input type="hidden" name="name" id="name" value=<%=user %> >
                        <input type="text" name="msg" id="msg" placeholder="說點什麼？">
                        <input type="submit" value="送出">
                    </form>
                </div>

                
                <% } %>     
                 
            </div>
        </div>

        <div  id="container2" style="display:none">
            <div id="status-box2">最高價錢: <span id="maxPrice"> - </span> !!  由 <span id="P_name"> 0 </span></div>
            <div id="chat"> 

                <% if (!login) { %>
                <div> 登入以繼續</div>
                <% } %>
                
                <% if(login) { %>
               <div  id="bidding-box">
                    <form id="bidding-form">
                        <input type="hidden" name="name" id="name" value=<%=user %> >
                        <input type="number" name="msg" id="msg" placeholder="說點什麼？">
                        <input type="submit" value="競標">
                    </form>
                </div>
                <% } %>
            </div>
        </div>

        <button onclick="myFunction()">聊天或競標</button>
    </div>

 
    <script>
        
        
        document.addEventListener("DOMContentLoaded", () => {
 
            var status = document.getElementById("status");
            var online = document.getElementById("online");
            var sendForm = document.getElementById("send-form");
            var biddingForm = document.getElementById("bidding-form");
            var content = document.getElementById("content");
            var maxPrice = document.getElementById("maxPrice");
            var p_name = document.getElementById("P_name");

            socket.on("connect", function () {
                status.innerText = "Connected.";              
            });
 
            socket.on("disconnect", function () {
                status.innerText = "Disconnected.";
            });
 
            socket.on("online", function (amount) {
                online.innerText = amount;
            });
            
            socket.on("compare", function(d){
                var price = d.msg
                maxPrice.innerText = price;
                var name = d.name
                p_name.innerText = name;
            });
               
            socket.on("msg", function (d) {
                var msgBox = document.createElement("div")
                    msgBox.className = "msg";
                var nameBox = document.createElement("span");
                    nameBox.className = "name";
                var name = document.createTextNode(d.name);
                var msg = document.createTextNode(d.msg);
                nameBox.appendChild(name);
                msgBox.appendChild(nameBox);
                msgBox.appendChild(msg);
                content.appendChild(msgBox);
            });

            sendForm.addEventListener("submit", function (e) {
                e.preventDefault();
         
                var formData = {};
                var formChild = sendForm.children;
                //formData["name"] = req.session.username;
                for (var i=0; i< sendForm.childElementCount; i++) {
                    var child = formChild[i];
                    if (child.name !== "") {
                        formData[child.name] = child.value;
                    }
                }
                socket.emit("send", formData);
            });

            biddingForm.addEventListener("submit", function (f) {
                f.preventDefault();
         
                var formData = {};
                var formChild = biddingForm.children;
                //formData["name"] = req.session.username;
                for (var i=0; i< biddingForm.childElementCount; i++) {
                    var child = formChild[i];
                    if (child.name !== "") {
                        formData[child.name] = child.value;
                    }
                }
                socket.emit("price", formData);
            });
              
          
             
        });
        
        function myFunction() {
            var x = document.getElementById("container");
            var y = document.getElementById("container2");
            
            if (x.style.display == "none") {
                y.style.display = "none";
                x.style.display = "block";
            } else {
                x.style.display = "none";
                y.style.display = "block";
            }
        } 
    </script>
</body>
